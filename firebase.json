{
  "firestore": {
    "database": "(default)",
    "location": "asia-south1",
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },

  "functions": [
    {
      "codebase": "payu",
      "source": "payu",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ]
    }
  ],

  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/payment-success",
        "destination": "/payment-success.html"
      },
      {
        "source": "/payment-failed",
        "destination": "/payment-failed.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
