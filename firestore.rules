rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    /* ğŸ”“ PUBLIC: PRODUCTS (logout user bhi dekh sakta hai) */
    match /products/{productId} {
      allow read: if true;              // anyone can see products
      allow write: if request.auth != null; // only logged-in can edit
    }

    /* ğŸ” DEFAULT: everything else needs login */
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
